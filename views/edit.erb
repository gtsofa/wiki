<h1>Edit page <%= @title%> </h1>
<div>
  <form>
    <fieldset>
      <label for="title" >Title:</label>
      <input type="text" name="title" id="title" value="<%= @title%>"/>
    </fieldset>
    <fieldset>
      <label for="content" >Content:</label>
      <textarea rows="10" columns="50" name="content" id="content"><%= @content %></textarea>
    </fieldset>
    <input type="submit" />

  </form>

  <a href="/">Home</a>

</div>
